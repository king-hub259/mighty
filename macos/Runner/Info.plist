<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIconFile</key>
    <string></string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>
    <key>NSHumanReadableCopyright</key>
    <string>$(PRODUCT_COPYRIGHT)</string>
    <key>NSMainNibFile</key>
    <string>MainMenu</string>
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
     <key>io.flutter.embedded_views_preview</key>
     <true/>
     <key>com.apple.security.files.user-selected.read-only</key>
     <true/>
     <key>com.apple.security.files.user-selected.read-write</key>
     <true/>
     <key>com.apple.security.network.client</key>
     <true/>
     <key>com.apple.security.device.microphone</key>
     <true/>
     <key>com.apple.security.device.camera</key>
     <true/>


     	<key>NSCameraUsageDescription</key>
         <string>This app need camera access for taking photo for user profile picture.</string>
        	<key>NSMicrophoneUsageDescription</key>
        	<string>This app need camera access for taking photo for user profile picture.</string>
         <key>NSLocationWhenInUseUsageDescription</key>
        	<string>This app needs access to location to manage delivery address when add a new address.</string>
         <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
        	<string>This app needs access to location to manage delivery address when add a new address.</string>
        	<key>NSLocationAlwaysUsageDescription</key>
          <string>This app needs access to location to manage delivery address when add a new address.</string>
         <key>NSPhotoLibraryUsageDescription</key>
        	<string>This app need photo gallery access for taking photo for user profile picture.</string>
         <key>NSBluetoothAlwaysUsageDescription</key>
         <string>We need your permission to use Bluetooth</string>
         <key>NSBluetoothPeripheralUsageDescription</key>
         <string>We need your permission to use Bluetooth</string>
         <key>NSLocationUsageDescription</key>
         <string>We need your permission to access your location</string>
         <key>NSPhotoLibraryAddUsageDescription</key>
         <string>We need your permission to add photos to your library</string>


    <!-- Allow arbitrary loads for network requests -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>school.codenichebd.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
                <key>NSRequiresCertificateTransparency</key>
                <false/>
            </dict>
        </dict>
    </dict>




    <!-- Permissions for accessing network -->
    <key>NSNetwork</key>
    <dict>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>

    <!-- Permissions for user notifications (if needed) -->
    <key>NSUserNotification</key>
    <dict>
        <key>NSAuthorizationRequired</key>
        <false/>
    </dict>

    <!-- Permissions for file access (if applicable) -->
    <key>NSDocumentsFolderUsageDescription</key>
    <string>This app requires access to the Documents folder to save files.</string>

    <!-- Additional configurations for security or debugging -->
    <key>NSHighResolutionCapable</key>
    <true/>
</dict>
</plist>
